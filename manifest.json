{
	"manifest_version": 3,
	"name": "Anti YouTube Shorts",
	"version": "3.1.2",
	"description": "YouTubeのShortsを非表示にして、あなたの大切な時間を守る拡張機能",
	"icons": {
		"16": "assets/icons/icon16.png",
		"48": "assets/icons/icon48.png",
		"128": "assets/icons/icon128.png"
	},
	"permissions": ["storage", "scripting", "activeTab"],
	"host_permissions": ["*://*.youtube.com/*"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "assets/icons/icon16.png",
			"48": "assets/icons/icon48.png"
		},
		"default_title": "Anti YouTube Shorts"
	},
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"js": ["content_scripts/anti-shorts.js"],
			"css": ["content_scripts/anti-shorts.css"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["assets/icons/*", "assets/font/*"],
			"matches": ["*://*.youtube.com/*"]
		}
	]
}
